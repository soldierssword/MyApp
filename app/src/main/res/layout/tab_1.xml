<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foregroundGravity="right" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="←"
            android:layout_weight="7"
            android:id="@+id/back" />

    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mc"
            android:id="@+id/mc"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="m+"
            android:id="@+id/m_plus"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="m-"
            android:id="@+id/m_minus"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mr"
            android:id="@+id/mr"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/c"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:id="@+id/plus_minus"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/divide"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/multiply"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/_7"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/_8"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/_9"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minus"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/_4"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/_5"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/_6"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plus"
            android:textSize="@dimen/tab_1_textsize"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/_1"
                    android:textSize="@dimen/tab_1_textsize"
                    android:layout_weight="1" />
                <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/_2"
                    android:textSize="@dimen/tab_1_textsize"
                    android:layout_weight="1" />
                <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/_3"
                    android:textSize="@dimen/tab_1_textsize"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/_0"
                    android:textSize="@dimen/tab_1_textsize"
                    android:layout_weight="2" />
                <Button android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:id="@+id/_point"
                    android:textSize="@dimen/tab_1_textsize"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/equals"
                android:text="="
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>